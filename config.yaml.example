# hk-console 配置文件
# 用户使用时，应将此文件复制为 config.yaml

projectName: "smzjg"
logDir: "/var/log/hk/smzjg"

# 定义需要管理的组件
# `entityType` 可选值为 "component" 或 "service"
# `tags` 用于未来可能的分类筛选
components:
  - name: "Zookeeper"
    entityType: "component"
    port: 2181
    startCmd: "/opt/hk/smzjg/component/zookeeper/bin/zkServer.sh start"
    tags: ["core", "db"]

  - name: "Nacos"
    entityType: "component"
    port: 8848
    startCmd: "/opt/hk/smzjg/component/nacos/bin/startup.sh -m standalone"
    tags: ["core", "registry"]

  - name: "Elasticsearch"
    entityType: "component"
    port: 19702
    startCmd: "/opt/hk/smzjg/component/elasticsearch/bin/elasticsearch -d"
    tags: ["search"]

# 定义需要管理的服务 (例如 Java Jar 包)
services:
  - name: "Framework"
    entityType: "service"
    port: 18080
    jarPath: "/opt/hk/smzjg/service/Framework.jar"
    jvmOpts: "-Xms512m -Xmx1024m"
    # 最终的启动命令会由程序动态构建
